#include<stdio.h>
void input_n(int *n)
{
    printf("enter number of array elements:");
    scanf("%d",n);
}
void input_arr(int n,int a[n])
{
    int i;
    printf("enter array elements:\n");
    for(i=0;i<n;i++)
    {
        printf("%d:",i);
        scanf("%d",&a[i]);
    }
}
disp_arr(int n,int a[n])
{
    int i;
    for(i=0;i<n;i++)
    {
        printf("\t%d",a[i]);
    }
}
void pivot(int n,int a[n])
{
    int i,p=0,temp,high=n-1;
    while((i<n))
    {
        if(a[i]<=a[p])
        {
            temp=a[p];
            a[p]=a[i];
            a[i]=temp;
            i++;
        }
        else
        {  
            while(a[high]>a[p]&&high>p)
            {
               high--;
            }
            temp=a[high];
            a[high]=a[i];
            a[i]=temp;
            high--; 
        }
    }
}
int main()
{
    int num,arr[num];
    input_n(&num);
    input_arr(num,arr);
    printf("\noriginal array:");
    disp_arr(num,arr);
    pivot(num,arr);
    printf("\noutput array:");
    disp_arr(num,arr);
    return 0;
}
