#include <stdio.h>
void inputval(float *a,float *b)
{
    printf("Enter first value:");
    scanf("%f",a);
    printf("Enter second value:");
    scanf("%f",b);
}
int ent_choice()
{
    int choice;
    printf("operator:\n1 for addition\n2 for subtraction\n3 for multiplication\n4 for division\n5 to exit");
    printf("enter your choice:");
    scanf("%d",&choice);
    return choice;
}
float calc(float a,float b,int choice)
{
    float ans;
    switch(choice)
    {
        case 1: ans=a+b;
        break;
        case 2: ans=a-b;
        break;
        case 3: ans=a*b;
        break;
        case 4: ans=a/b;
        break;
    }
    return ans;
}
void disp(float ans)
{
    printf("the answer is:%f",ans);
}
int main()
{
    float x,y,answer;
    int ch;
    do
    {
       ch=ent_choice();
       if(ch==5)
          break;
       inputval(&x,&y);
       answer=calc(x,y,ch);
       disp(answer);
     }
     while(ch!=5)
    return 0;
}
