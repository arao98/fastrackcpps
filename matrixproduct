
#include <stdio.h>
int z[20][20];
void input_mat(int x[20][20],int y[20][20],int *r1,int *c1,int *r2,int *c2)
{
    int i,j;
    printf("enter number of rows and columns for first matrix:");
    scanf("%d%d",r1,c1);
    printf("enter number of rows and columns for second matrix:");
    scanf("%d%d",r2,c2);
    printf("enter matrix 1:\n");
    for(i=0;i<*r1;i++)
     for(j=0;j<*c1;j++)
     {
         printf("enter array element%d-%d:",i,j);
         scanf("%d",&x[i][j]);
     }
     printf("enter matrix 2:\n");
     for(i=0;i<*r2;i++)
      for(j=0;j<*c2;j++)
     {
         printf("enter array element%d-%d:",i,j);
         scanf("%d",&y[i][j]);
     }
}
void prod_mat(int x[20][20],int y[20][20],int z[20][20],int r1,int c1,int r2,int c2)
{
    int i,j,k,sum=0;
    if(c1==r2)
    {
        for(i=0;i<r1;i++)
        {
           for(j=0;j<c2;j++)
           {
              for(k=0;k<c1;k++)
              z[i][j]+=x[i][k]*y[k][j];
           }
        }
    }
}
void disp_mat(int z[20][20],int r,int c)
{
    int i,j;
    for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
          printf("%d\t",z[i][j]);
        printf("\n");
    }
}
int main()
{
    int a[20][20],b[20][20],m,n,p,q;
    input_mat(a,b,&m,&n,&p,&q);
    prod_mat(a,b,z,m,n,p,q);
    printf("\nmatrix 1:\n");
    disp_mat(a,m,n);
    printf("\nmatrix 2:\n");
    disp_mat(b,p,q);
    printf("\nproduct matrix :\n");
    disp_mat(z,m,q);
    return 0;
}
